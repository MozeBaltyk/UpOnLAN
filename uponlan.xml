<network xmlns:dnsmasq='http://libvirt.org/schemas/network/dnsmasq/1.0'>
  <name>uponlan</name>
  <forward mode='nat'>
    <nat>
      <port start="1024" end="65535"/>
    </nat>
  </forward>
  <bridge name='virbr9' stp='on' delay='5'/>
  <ip address="192.168.117.1" netmask="255.255.255.0">
    <dhcp>
      <range start="192.168.117.128" end="192.168.117.254"/>
    </dhcp>
  </ip>
  <dnsmasq:options>
    <!-- Disable re-use of the DHCP servername and filename fields -->
    <dnsmasq:option value='enable-tftp'/>
    <dnsmasq:option value='tftp-root=/var/lib/tftpboot'/>
    <dnsmasq:option value='dhcp-boot=menu/menu.ipxe'/>
  </dnsmasq:options>
</network>
